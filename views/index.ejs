<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Home</title>
  </head>
  <body>
    <h1>Index</h1>
    <%- include("partials/newmessage.ejs")%>
    <ul>
      <% messages.forEach((message) => {%>
      <li>
        <% if (user?.is_member) {%>
        <div>Author: <%= message.user.username%></div>
        <div>Time : <%= message.timestamp %></div>
        <% } %>
        <div>Title : <%= message.title%></div>
        <div>Text: <%= message.text%></div>
      </li>
      <%});%>
    </ul>
  </body>
</html>
